<%= render partial:"layouts/error_messages", locals: {book: @book} %>

<h1>Editing Book</h1>
<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %>
<br>
<%= f.submit "Update Book" %>
<% end %>
<%=link_to "Show", book_path(@book.id) %>
<span>|</span>
<%=link_to "Back", books_path %>