
    <div class="row">
    	<div class="col-xs-3">
          <%= render partial:"user_profile", locals: {user: @user} %>

          <%= render partial:"books/new" %>
        </div>

        <div class="col-xs-9">
			<h2>Users</h2>

			<table class="table">
				<thead>
			 	<tr>
			 		<th class="col-xs-3">image</th>
			 		<th class="col-xs-6">name</th>
			 		<th class="col-xs-3"></th>
			 	</tr>
			    </thead>
				<tbody>
				<% @users.each do |user| %>
				<tr>
					<td>
						<%= attachment_image_tag user, :profile_image,format: 'jpeg', fallback: "no_image.jpg", size:"40x40" %>
					</td>
					<td>
					    <%= user.name %>
					</td>
					<td>
						<%= link_to "Show", user_path(user.id) %>
					</td>
				</tr>
				 <% end %>
			    </tbody>
			</table>
		</div>
	</div>
